{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"checkJs": true,
		"esModuleInterop": true,
		"target": "ES2021",
	},
	"include": ["src/**/*", "examples/**/*"],
	"exclude": ["**/*.spec.ts"]
}
